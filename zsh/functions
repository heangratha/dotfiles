#
# Functions
#

# Grep processes
function psgrep {
  ps aux | grep $1
}

# Update CLI tools with one command
# TODO ct 2012-06-27 don't know if this is a good idea
function update_repos {
  cd ~/.vim && rake
  cd ~/
  brew update
}

# yslow CLI
function yslow {
  phantomjs ~/bin/yslow.js $*
}

function git-report {
  ~/bin/git-weekly-report -g 'Christian Trabold' -l $PWD -p ~/workspace/projects.rb $*
}

# Grep DNS entries
function dns-grep {
  dig $* -t AXFR|grep
}

# Copy highlighted code
# @see https://gist.github.com/jimbojsb/1630790
function copy-highlight {
  highlight --style solarized-dark -W -J 50 -j 3 --line-numbers --font-size 24 -O rtf $* | pbcopy
}
